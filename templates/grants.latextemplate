\begin{document}

\thispagestyle{empty}

%% Title
\noindent{\LARGE\bfseries \textcolor{RiceBlue}{Grants and Funding Summary}}

\bigskip
\noindent{\large James Doss-Gollin}

\bigskip
\noindent{\footnotesize Generated: \today}

\bigskip

%% Summary Statistics
((* set grants_sect = data.sections | select_by_attr_name("title", "Grants and Contracts") *))
((* set active_grants = grants_sect.entries | selectattr("status", "equalto", "active") | list *))
((* set complete_grants = grants_sect.entries | selectattr("status", "equalto", "complete") | list *))
((* set under_review = grants_sect.entries | selectattr("status", "equalto", "under_review") | list *))
((* set not_funded = grants_sect.entries | selectattr("status", "equalto", "not_funded") | list *))

\section{Summary}

\begin{itemize}
  \item \textbf{Active Grants:} ((( active_grants | length )))
  \item \textbf{Completed Grants:} ((( complete_grants | length )))
  \item \textbf{Under Review:} ((( under_review | length )))
  \item \textbf{Not Funded:} ((( not_funded | length )))
  \item \textbf{Total Proposals:} ((( grants_sect.entries | length )))
\end{itemize}

%% Active Grants
\section{Active Grants}

\begin{itemize}
  ((* for i in active_grants | sort(attribute="start", reverse=True) *))
  \item \textbf{(((i.role | escape_tex)))}, \enquote{(((i.title | escape_tex)))}.
        (((i.sponsor | escape_tex)))((* if i.program *)): \textit{((( i.program | escape_tex)))}((* endif *))
        ((* if i.total_award *)), Amount: \$((( "{:,}".format(i.total_award | int) )))((* endif *))
       . Period: (((i.start)))--(((i.end)))
        ((* if i.PI *)). PI: (((i.PI | escape_tex)))((* endif *))
        ((* if i.collaborative *)) \\ \textit{Collaborative research}((* endif *))
        ((* if i.subaward_from *)) \\ \textit{Subaward from (((i.subaward_from | escape_tex)))}((* endif *))
  ((* endfor *))
\end{itemize}

