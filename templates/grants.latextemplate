\documentclass[10pt,oneside]{article}

% language setup
\usepackage[english]{babel}

% margins
\usepackage[left=1in, right=1in, top=1in, bottom=1in]{geometry}% adjust the page margins

\RequirePackage{xcolor}
\definecolor{RiceBlue}{HTML}{00205B} % official Rice blue color -- use for text etc
\definecolor{RiceGray}{HTML}{7C7E7F} % official Rice gray -- use for Section
\definecolor{BrickRed}{HTML}{C04829} % backup color
\definecolor{GrassGreen}{HTML}{359245}
\definecolor{WarmYellow}{HTML}{E9A139}

% Better footer
\usepackage{fancyhdr}
\fancyhf{}
\fancyfoot[L]{James Doss-Gollin - Grants Summary}
\fancyfoot[R]{\thepage}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{1pt}
\pagestyle{fancy}

\usepackage{fontspec}
\setromanfont[
	Path = ../fonts/,
  UprightFont = *-Regular,
	BoldFont = *-Bold,
	ItalicFont = *-Italic,
	BoldItalicFont = *-BoldItalic,
	Extension = .ttf,
]{Lato}

% Section styling
\usepackage{titlesec}
\titlespacing*{\section}{0pt}{1ex}{0.25in}
\titleformat{\section}{\large\bfseries\color{RiceBlue}}{}{0pt}{}

\raggedbottom

% better lists
\usepackage{enumitem}
\setlist[itemize, 1]{nosep, noitemsep, labelsep=5pt, leftmargin=*, after=\vspace{\baselineskip}}

\usepackage[autostyle=true, autopunct=true, english=american]{csquotes}

% have to load this last
\usepackage{hyperref}
\hypersetup{hidelinks, breaklinks}

